<h1 align="center">Biology</h1>

	<!-- @ is a instance variable -->
	<!-- <% %> put to the block that we do not display -->
	<!-- <%= %> put to the block that we display -->

<table border="1" align="center" cellpadding="0" cellspacing="0" width="70%">
	<tr align="center">
		<th>Friend ID</th>
		<th>Date Of Birth</th>
		<th>Place Of Birth</th>
		<th>Skills</th>
		<th>Favorite</th>
		<th>Dream</th>
	</tr>
	<% @bio.each do |biology| %>
	<tr align="center">
		<td><%= biology.friend_id %></td>
		<td><%= biology.date_of_birth %></td>
		<td><%= biology.place_of_birth %></td>
		<td><%= biology.skills %></td>
		<td><%= biology.favorite %></td>
		<td><%= biology.dream %></td>
	</tr>
	<% end %>
</table>